@page
@using AmLink.Submissions.Mcp.Client.Pages
@model IndexModel
@{
    ViewData["Title"] = "MCP Client";
}

<div class="text-center mb-4">
    <h1 class="display-4">MCP Client</h1>
    <p class="lead">Connect to the Model Context Protocol server with OAuth authentication.</p>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                <strong>Success:</strong> @Model.SuccessMessage
            </div>
        }

        <!-- Authentication Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Authentication Status</h5>
            </div>
            <div class="card-body">
                @if (Model.IsAuthenticated)
                {
                    <p class="mb-3"><span class="badge bg-success me-2">✓ Authenticated</span>Ready to connect to MCP server.</p>
                    <form method="post" asp-page-handler="ClearToken" class="d-inline">
                        <button type="submit" class="btn btn-outline-warning btn-sm">Clear Authentication</button>
                    </form>
                }
                else
                {
                    <p class="mb-3"><span class="badge bg-warning text-dark me-2">⚠️ Not Authenticated</span>Please authenticate first.</p>
                    <form method="post" asp-page-handler="Authenticate" class="d-inline">
                        <button type="submit" class="btn btn-primary">Start Authentication</button>
                    </form>
                }
                
                @if (!string.IsNullOrEmpty(Model.AuthUrl))
                {
                    <div class="mt-3">
                        <p><strong>Authentication Required:</strong></p>
                        <a href="@Model.AuthUrl" 
                           target="_blank" 
                           class="btn btn-success"
                           onclick="handleAuthWindow(this.href); return false;">
                            Authenticate Now
                        </a>
                        <small class="form-text text-muted">This will open a new window for authentication.</small>
                    </div>
                }
            </div>
        </div>

        <!-- MCP Connection Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">MCP Server Connection</h5>
            </div>
            <div class="card-body">
                @if (Model.IsConnected)
                {
                    <p class="mb-3"><span class="badge bg-success me-2">✓ Connected</span>Successfully connected to MCP server.</p>
                }
                else
                {
                    <p class="mb-3"><span class="badge bg-secondary me-2">○ Disconnected</span>Not connected to MCP server.</p>
                    @if (Model.IsAuthenticated)
                    {
                        <form method="post" asp-page-handler="Connect" class="d-inline">
                            <button type="submit" class="btn btn-primary">Connect to MCP Server</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>Authenticate First</button>
                    }
                }
            </div>
        </div>

        <!-- Available Tools Section -->
        @if (Model.AvailableTools != null && Model.AvailableTools.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Available Tools (@Model.AvailableTools.Count)</h5>
                </div>
                <div class="card-body">
                    @foreach (var tool in Model.AvailableTools)
                    {
                        <div class="border rounded p-3 mb-2">
                            <h6>@tool.Name</h6>
                            <p class="text-muted">@tool.Description</p>
                            
                            <form method="post" asp-page-handler="InvokeTool" class="d-inline">
                                <input type="hidden" name="toolName" value="@tool.Name" />
                                <div class="input-group input-group-sm mb-2">
                                    <input type="text" 
                                           name="parameters" 
                                           class="form-control" 
                                           placeholder="Parameters (JSON)" 
                                           value="{}" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm">Invoke</button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Tool Result Section -->
        @if (!string.IsNullOrEmpty(Model.ToolResult))
        {
            <div class="card">
                <div class="card-header">
                    <h5>Tool Result</h5>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 rounded"><code>@Model.ToolResult</code></pre>
                </div>
            </div>
        }
    </div>
</div>

<script>
function handleAuthWindow(url) {
    const authWindow = window.open(url, 'auth', 'width=600,height=700,scrollbars=yes');
    
    // Listen for messages from the auth window
    window.addEventListener('message', function(event) {
        if (event.data === 'auth-success') {
            // Reload the page to show updated authentication status
            window.location.reload();
        }
    });
    
    // Fallback: check if window is closed manually
    const checkClosed = setInterval(() => {
        if (authWindow.closed) {
            clearInterval(checkClosed);
            // Give a moment for the callback to process, then reload
            setTimeout(() => window.location.reload(), 1000);
        }
    }, 1000);
}
</script>
