FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 5001

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["src/amlink-submissions-mcp-client/amlink-submissions-mcp-client.csproj", "src/amlink-submissions-mcp-client/"]
RUN dotnet restore "src/amlink-submissions-mcp-client/amlink-submissions-mcp-client.csproj"
COPY . .
WORKDIR "/src/src/amlink-submissions-mcp-client"
RUN dotnet build "amlink-submissions-mcp-client.csproj" -c Debug -o /app/build

FROM build AS publish
RUN dotnet publish "amlink-submissions-mcp-client.csproj" -c Debug -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app

# Create a non-root user
RUN adduser --disabled-password --gecos '' appuser

COPY --from=publish /app/publish .

# Set ownership of the app directory to the non-root user
RUN chown -R appuser:appuser /app

# Switch to the non-root user
USER appuser

# Add health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:80/health || exit 1

ENTRYPOINT ["dotnet", "amlink-submissions-mcp-client.dll"]