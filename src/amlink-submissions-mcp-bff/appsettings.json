{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "Instance": "https://identitydev.amwins.com",
    "Domain": "identitydev.amwins.com",
    "ClientId": "al-mcp-client",
    "ClientSecret": "REQUIRED_IN_ENV_VAR",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  "DownstreamApi": {
    "BaseUrl": "http://amlink-mcp-server",
    "Scopes": ["amwins.amlink.submission.read", "amwins.amlink.submission.write"]
  },
  "ReverseProxy": {
    "Routes": {
      "mcp-route": {
        "ClusterId": "mcp-cluster",
        "Match": {
          "Path": "/api/mcp/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/mcp/{**catch-all}"
          }
        ]
      },
      "submission-route": {
        "ClusterId": "submission-cluster",
        "Match": {
          "Path": "/api/submissions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/submissions/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "mcp-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://amlink-mcp-server:80"
          }
        }
      },
      "submission-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "SUBMISSION_API_BASE_URL_FROM_ENV"
          }
        }
      }
    }
  }
}
